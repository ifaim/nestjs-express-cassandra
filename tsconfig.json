{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom", "es2017"],
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": [
    "lib/**/*",
    "../index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}